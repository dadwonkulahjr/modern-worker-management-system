@page
@model WorkerModernManagementSystem.UI.Pages.Admin.Department.UpsertModel
@{
    if (Model.DepartmentObj.Id == 0)
    {
        ViewData["Title"] = "Create Department";
    }
    else
    {
        ViewData["Title"] = "Update Department";
    }
}

<form method="post" asp-page="upsert">
    <div class="container">

        @if (Model.DepartmentObj.Id != 0)
        {
            <input type="hidden" asp-for="@Model.DepartmentObj.Id" />
        }
        <div class="row px-2 mx-2 backgroundWhite border">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(Model.DepartmentObj.Id != 0 ? "Update Department": "Create Department")</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="DepartmentObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="DepartmentObj.Name" class="form-control" placeholder="Department Name..." />
                        <span asp-validation-for="DepartmentObj.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">
                                    @(Model.DepartmentObj.Id != 0 ? "Update" : "Create")
                                </button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />

}