@page
@model WorkerModernManagementSystem.UI.Pages.Employee.Home.IndexModel
@{
    ViewData["Title"] = "Employee Home";

}
<style>
    .btn {
        width: 75px;
    }
</style>

@if (Model.EmployeeVM.ListOfMainMenuItems.Any())
{
    <div class="row container pb-3 backgroundWhite">

        <div class="col-12">
            <div class="card-deck">
                <div class="card-deck mt-3">
                    @foreach (var employee in Model.EmployeeVM.ListOfMainMenuItems)
                    {
                        string phonePath = "~/images/iamtuse_upload/" + (employee.Employee.PhotoPath ?? "jjc.jpg");

                        <div class="card" style="border:2px solid #008cba;border-radius:5px;min-width: 18rem; max-width: 30.5%;margin:5px;">
                            <div class="pl-3 pt-1 text-center">
                                <div class="card-title text-primary">
                                    <b>
                                        @employee.Employee.FullName
                                    </b>
                                </div>
                                <div class="d-flex justify-content-between form-control" style="border:0px;">
                                    <div class="badge col-6 badge-warning text-center"
                                         style="font-size:14px;">
                                        @employee.Employee.DateHire.ToShortDateString()
                                    </div>
                                    <div class="col-6 text-right h5" style="color:maroon">
                                        @employee.Employee.Salary.Value.ToString("c")
                                    </div>
                                </div>
                                <img src="@phonePath" class="card-img-top pt-2 rounded" asp-append-version="true" />
                                <div class="card-footer text-center">
                                    <a class="btn btn-primary mt-2" asp-route-id="@employee.Id">View</a>
                                    <a asp-route-id="@employee.Id" class="btn btn-primary mt-2">Edit</a>
                                    <a class="btn btn-danger mt-2 text-white">Delete</a>
                                </div>
                            </div>
                        </div>

                    }
                </div>


            </div>
        </div>


    </div>
}
else
{
    <div class="row container pb-3 backgroundWhite">
        <div class="card" style="width:400px">
            <div class="card-body">
                <h4 class="card-title">No record to be display</h4>
            </div>
        </div>
    </div>

}
